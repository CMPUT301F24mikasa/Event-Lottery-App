<!-- activity_admin.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Header -->
    <TextView
        android:id="@+id/admin_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/admin_panel"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textAlignment="center"
        android:background="#0D47A1"
        android:layout_alignParentTop="true" />

    <!-- Manage Facilities Button -->
    <Button
        android:id="@+id/button_manage_facilities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manage_facilities"
        android:layout_below="@id/admin_header"
        android:layout_marginTop="16dp"
        android:layout_margin="20dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0D47A1"/>

    <!-- Manage Profiles Button -->
    <Button
        android:id="@+id/button_manage_profiles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manage_profiles"
        android:layout_below="@id/button_manage_facilities"
        android:layout_marginTop="16dp"
        android:layout_margin="20dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0D47A1"/>

    <!-- Manage Images Button -->

    <!-- Manage Events Button -->
    <Button
        android:id="@+id/button_manage_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manage_all_events"
        android:layout_below="@id/button_manage_profiles"
        android:layout_marginTop="16dp"
        android:layout_margin="20dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0D47A1"/>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D47A1"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/button_profiles"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/profiles"
            android:padding="8dp"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/button_events"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_event"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/events"
            android:padding="8dp"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/button_notifications"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notifications"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/notifications"
            android:padding="8dp"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/button_admin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_admin_panel_settings"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/admin"
            android:padding="8dp"
            app:tint="@android:color/white" />
    </LinearLayout>

</RelativeLayout>

