<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Header -->
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/events_caps"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:padding="16dp"
        android:textAlignment="center"
        android:background="#0D47A1" />

    <!-- QR Scanner Button -->
    <Button
        android:id="@+id/qr_scanner_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/qr_scanner"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0D47A1"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="18sp"
        android:layout_below="@id/header" />

    <!-- Events Signed Up For Button -->
    <Button
        android:id="@+id/events_signed_up_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/events_signed_up_for"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0D47A1"
        android:textSize="18sp"
        android:layout_below="@id/qr_scanner_button" />

    <!-- Create Event Button -->
    <Button
        android:id="@+id/create_event_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/create_event_small_caps"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0D47A1"
        android:textSize="18sp"
        android:layout_below="@id/events_signed_up_button" />

    <!-- Manage Events Button -->
    <Button
        android:id="@+id/manage_events_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="@string/manage_events"
        android:textColor="#FFFFFF"
        android:backgroundTint="#0D47A1"
        android:textSize="18sp"
        android:layout_below="@id/create_event_button" />

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D47A1"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/button_profiles"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/profiles"
            android:padding="8dp"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/button_events"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_event"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/events"
            android:padding="8dp"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/button_notifications"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_notifications"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/notifications"
            android:padding="8dp"
            app:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/button_admin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_admin_panel_settings"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="@string/admin"
            android:padding="8dp"
            app:tint="@android:color/white" />
    </LinearLayout>

</RelativeLayout>
